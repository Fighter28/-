* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
*::after {
  box-sizing: border-box;
}
*::before {
  box-sizing: border-box;
}
a {
  color: inherit;
  text-decoration: none;
}
ul,
li {
  list-style: none;
}
body {
  background: #eee;
}
.globalHeader {
  margin: 30px;
}
.searchForm {
  display: flex;
  justify-content: space-between;
}
.searchForm > input {
  width: 100%;
  padding: 0 10px;
  height: 40px;
  border: none;
  border-radius: 4px;
}
.searchForm > button {
  white-space: nowrap;
  padding: 0 28px;
  margin-left: 10px;
  font-size: 16px;
  border: 1px solid black;
  background: #0282b9;
  color: white;
  border-radius: 4px;
}
.globakMain {
  max-width: 900px;
}
.siteList {
  border: 1px solid red;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 30px;
}
