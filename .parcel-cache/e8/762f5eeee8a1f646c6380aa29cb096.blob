* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
*::after {
  box-sizing: border-box;
}
*::before {
  box-sizing: border-box;
}
ul,
li {
  list-style: none;
}
body {
  background: #eee;
}
.globalHeader {
  margin: 20px;
}
@media (min-width: 500px) {
  .globalHeader {
    margin: 60px 0;
  }
}
.searchForm {
  display: flex;
  justify-content: space-between;
}
@media (min-width: 500px) {
  .searchForm {
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }
}
.searchForm > input {
  width: 100%;
  padding: 0 10px;
  height: 40px;
  border: none;
  border-radius: 4px;
}
.searchForm > button {
  white-space: nowrap;
  padding: 0 28px;
  margin-left: 10px;
  font-size: 16px;
  border: 1px solid black;
  background: #0282b9;
  color: white;
  border-radius: 4px;
}
.globalMain {
  max-width: 900px;
  margin-right: auto;
  margin-left: auto;
}
.siteList {
  display: flex;
  flex-wrap: wrap;

  margin: 20px;
  border: 1px solid red;
}
@media (min-width: 500px) {
  .siteList {
    margin-right: 0;
    margin-left: 0;
  }
}
.siteList > li {
  margin-bottom: 10px;
  border: 1px solid blue;
}
@media (min-width: 500px) {
  .siteList > li {
    margin-right: -25px;
  }
}
.siteList .site > .logo {
  width: 64px;
  height: 64px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 64px;
}
.siteList .site > .link {
  font-size: 14px;
  margin-top: 6px;
}
.siteList .site {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 160px;
  background: white;
  padding: 20px 0;
  border-radius: 4px;
  position: relative;
}
.siteList .addButton {
  width: 160px;
  background: white;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20px 0;
}
.siteList .addButton .icon-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 64px;
  height: 64px;
}
.siteList .addButton .icon {
  width: 56px;
  height: 56px;
}
.siteList .addButton .text {
  font-size: 14px;
  margin-top: 6px;
}
.siteList .site > .close {
  position: absolute;
  top: 5px;
  right: 10px;
  display: none;
}
.siteList .site:hover > .close {
  display: block;
}

